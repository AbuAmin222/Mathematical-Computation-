Public class RSAEncryption{

 Public static Boolean conditions(int p, int q, int e) {
  int n = p * q;
  int r = (p -1) * (q - 1);
  if(!isOddPrime(p) || !isOddPrime(q){
    System.out.println("Choose  odd numbers .....");
    return;
  }else if(gcd(e, r) != 1){
   System.out.println("Choose other numbers because isn't relatively prime");
  return;
  }
  return true;
}
Public static int gcd(int a, int b){
     int value;
     if(a > 1 && b > 1 && b > a){
       while(value != 0){
            value = b % a;
            b = a;
            a = value;
       }
     }else{
        return IndexOutOfBoundsException("a and b value should be greater than one and b value greater than a");
     }
     return value;
}
public static String RSAEncryption(String text, int e; int p, int q, int begin) {
    if(conditions(p, q, e)){
    String[][] data = new String[count][2];
    for (int i = 0; i < count; i++) {
        data[i][0] = String.valueOf((char) ('A' + begin + i));  
        data[i][1] = String.format("%02d", begin + i);        
    }

    text = text.toUpperCase();
    String encode = "";

    for (int i = 0; i < text.length(); i++) {
        char ch = text.charAt(i);

    
        String number = "";
        for (int j = 0; j < data.length; j++) {
            if (data[j][0].equals(String.valueOf(ch))) {
                number = data[j][1];
                break;
            }
        }

        
        int m = Integer.parseInt(number);
        int c = (int) (Math.pow(m, e) % p * q); 

        
        String encodedChar = "";
        for (int k = 0; k < data.length; k++) {
            if (Integer.parseInt(data[k][1]) == c) {
                encodedChar = data[k][0];
                break;
            }
        }

        encode += encodedChar;
    }

    return encode;
}
return IndexOutOfBoundsException("Insert other inputs.....");
}
public static void main(string args){
    Scanner s = new Scanner(system.in);
    System.out.println("Enter text");
    String text = s.nextLine();
    System.out.println("Enter n number");
    String n = s.nextLine();
    System.out.println("Enter p number");
    String p = s.nextLine();
    System.out.println("Enter q number");
    String q = s.nextLine();
    System.out.println("Enter begin number to begin character number(0,1,2....)");
    String begin = s.nextLine();

    RSAEncryption code = this.RSAEncryption(text, n, p, q, begin);
}
